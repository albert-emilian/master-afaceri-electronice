@model List<ProductTypeVMDTO>
@{
    ViewData["Title"] = "Product Type";
}

<div class="row mb-2 mt-2 operationsButtons">
    <div class="col-md-12">
        <a href="@RouteConfig.ProductTypeRoutes.CreateRoute" class="btn btn-new btn-outline-new font-weight-bold mr-2" data-toggle="tooltip" title="New" data-placement="top">
            <span class="fa fa-plus-circle"></span>
        </a>

        <button class="btn btn-outline-dark font-weight-bold mr-2" data-toggle="tooltip" title="Edit" data-placement="top" onclick="openEditWindowOnBtnEditClick('@RouteConfig.ProductTypeRoutes.EditRoute')">
            <span class="fa fa-edit"></span>
        </button>

        <button type="button" class="btn btn-delete btn-outline-delete font-weight-bold mr-2" id="btnDelete" data-toggle="tooltip" data-placement="top" onclick="onDelete('@RouteConfig.ProductTypeRoutes.DeleteRoute')" title="Delete">
            <span class="fa fa-trash"></span>
        </button>
    </div>
</div>

<br />

<table id="table" class="table table-hover table-striped table-dark">
    <thead>
        <tr>
            <th hidden>Product Type Id</th>
            <th> Product Type Name</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            <tr id="@item.Id" ondblclick="openEditWindowOnDlbClick('@RouteConfig.ProductTypeRoutes.EditRoute', @item.Id)">
                <td hidden>@item.Id</td>
                <td>@item.Name</td>
            </tr>
        }

    </tbody>
</table>